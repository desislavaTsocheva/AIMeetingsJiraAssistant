@page "/"
@using AiMeetingAssistant.Services
@inject IJiraAiService MeetingService
@rendermode InteractiveServer

<div class="container mt-4">
    <h2 class="mb-4">AI Meeting Assistant</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5>1. Въведете транскрипция от срещата</h5>
            <textarea @bind="rawText" class="form-control" rows="6" placeholder="Поставете текста от срещата тук..."></textarea>
            <button class="btn btn-primary mt-3" @onclick="AnalyzeMeeting" disabled="@isProcessing">
                @if (isProcessing)
                {
                    <span class="spinner-border spinner-border-sm"></span>
                    <span> Анализиране...</span>
 }
                else
                {
                    <span>Анализирай с AI</span>
                }
            </button>
        </div>
    </div>

    @if (extractedTasks != null && extractedTasks.Any())
    {
        <div class="card shadow-sm mb-4 border-warning">
            <div class="card-body">
                <h5>2. Преглед на генерираните задачи</h5>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Задача</th>
                            <th>Отговорник</th>
                            <th>Срок</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var task in extractedTasks)
                        {
                            <tr>
                                <td><input @bind="task.task" class="form-control" /></td>
                                <td><input @bind="task.assignee" class="form-control" /></td>
                                <td><input @bind="task.due_date" class="form-control" /></td>
                                <td><button class="btn btn-sm btn-danger" @onclick="() => extractedTasks.Remove(task)">🗑</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <button class="btn btn-success mt-3" @onclick="SendTasksToJira">Изпрати към Jira</button>
            </div>
        </div>
    }
    else if (!isProcessing && history.Any(x => x.Contains("Анализът приключи")))
    {
        <div class="alert alert-info">AI не откри задачи. Проверете текста или промпта.</div>
    }

    <div class="mt-5">
        <h6>Последни активности</h6>
        <ul class="list-group list-group-flush">
            @foreach (var log in history)
            {
                <li class="list-group-item small text-muted">@log</li>
            }
        </ul>
    </div>
</div>

@code {
    private string rawText = "";
    private bool isProcessing = false;
    private bool isSending = false;
    private List<MeetingTask> extractedTasks = new();
    private List<string> history = new();
    private async Task AnalyzeMeeting()
    {
        if (string.IsNullOrWhiteSpace(rawText)) return;

        isProcessing = true;
        await InvokeAsync(StateHasChanged); // Казваме на UI да покаже лоудинга

        try
        {
            extractedTasks = await MeetingService.ProcessTranscriptionAsync(rawText);
            StateHasChanged();
            history.Insert(0, $"[{DateTime.Now:HH:mm}] Анализът приключи успешно.");
        }
        catch (Exception ex)
        {
            history.Insert(0, $"Грешка: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
            await InvokeAsync(StateHasChanged); // Обновяваме таблицата с новите данни
        }
    }
    private async Task SendTasksToJira()
    {
        isSending = true;
        try
        {
            var success = await MeetingService.SendToJiraAsync(extractedTasks);
            if (success)
            {
                extractedTasks.Clear();
                rawText = "";
                history.Insert(0, $"[{DateTime.Now:HH:mm}] Успешно изпратени задачи към Jira.");
            }
        }
        finally
        {
            isSending = false;
        }
    }
}