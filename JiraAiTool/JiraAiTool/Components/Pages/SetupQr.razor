@page "/setup-qr-code"
@using JiraAiTool.Components.Layout
@using QRCoder
@using System.IO
@rendermode InteractiveServer
@inject NavigationManager NavigationManager
@layout AuthLayout

<div class="setup-container">
    <div class="setup-card">
        <div class="header">
            <div class="ai-icon">AI</div>
            <h2>Step 2: Connect Jira API</h2>
        </div>

        <p class="subtitle">To manage your tasks, the assistant needs a secure API token. Scan the code to create one instantly.</p>

        <div class="instruction-box">
            <div class="qr-image-wrapper">
                @if (!string.IsNullOrEmpty(qrCodeImageSrc))
                {
                    <img src="@qrCodeImageSrc" alt="Scan to create token" />
                }
                else
                {
                    <div class="loader-placeholder">
                        <p>Generating QR...</p>
                    </div>
                }
            </div>
            <div class="steps-text">
                <ol>
                    <li>Scan with your phone (or click the code).</li>
                    <li>Click <b>Create API token</b> in Jira.</li>
                    <li>Label it "Assistant" and <b>Copy</b> it.</li>
                </ol>
            </div>
        </div>

        <div class="input-group">
            <label for="token">Paste your API Token</label>
            <input type="password" id="token" @bind="apiToken" placeholder="ATATT..." />
            <button class="save-btn" @onclick="SaveToken" disabled="@(string.IsNullOrEmpty(apiToken))">
                Complete Setup
            </button>
        </div>

        <p class="security-note">
            <svg style="width:12px;height:12px" viewBox="0 0 24 24"><path fill="currentColor" d="M12,17A2,2 0 0,0 14,15C14,13.89 13.11,13 12,13A2,2 0 0,0 10,15C10,16.11 10.89,17 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10C4,8.89 4.9,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z" /></svg>
            Your token is encrypted and stored securely.
        </p>
    </div>
</div>

@code {
    private string qrCodeImageSrc;
    private string apiToken;

    protected override void OnInitialized()
    {
        string jiraUrl = "https://id.atlassian.com/manage-profile/security/api-tokens";
        GenerateQrCode(jiraUrl);
    }

    private void GenerateQrCode(string url)
    {
        try
        {
            using QRCodeGenerator qrGenerator = new QRCodeGenerator();
            using QRCodeData qrCodeData = qrGenerator.CreateQrCode(url, QRCodeGenerator.ECCLevel.Q);

            using PngByteQRCode qrCode = new PngByteQRCode(qrCodeData);
            byte[] qrAsBytes = qrCode.GetGraphic(20);

            qrCodeImageSrc = $"data:image/png;base64,{Convert.ToBase64String(qrAsBytes)}";
        }
        catch (Exception ex)
        {
            Console.WriteLine($"QR Generation Error: {ex.Message}");
        }
    }

    private async Task SaveToken()
    {
        Console.WriteLine("Token Saved Successfully");
        NavigationManager.NavigateTo("/");
    }
}
